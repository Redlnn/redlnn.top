{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "checkJs": false,
    "strict": true,
    "baseUrl": "./",
    "allowJs": true,
    "sourceMap": false,
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.vue", "vite.config.js"],
  "exclude": ["node_modules", "public", "dist", ".vscode", ".git", ".github"]
}
